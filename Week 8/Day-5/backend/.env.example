# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_ORIGIN=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/documents_db

# LLM Provider Configuration
# Options: gemini, openai, anthropic
LLM_PROVIDER=gemini
LLM_TEMPERATURE=0.2

# Gemini/Google API Configuration
GEMINI_API_KEY=
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# OpenAI API Configuration (if using openai provider)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API Configuration (if using anthropic provider)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_PDF_PAGES=100

# QA Configuration
TOP_K=8
RELEVANCE_THRESHOLD=0.65
