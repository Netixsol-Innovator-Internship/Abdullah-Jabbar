# MongoDB Configuration
# For local development: mongodb://localhost:27017/ip-tracker
# For production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/ip-tracker
MONGODB_URI=mongodb://localhost:27017/ip-tracker

# IP Hashing Salt
# Generate a secure random string for production
# Example: openssl rand -base64 32
IP_SALT=your-secret-salt-here

# Raw IP Storage (optional)
# Set to 'true' to store raw IPs (not recommended for privacy)
# Set to 'false' to only store hashed IPs (recommended)
STORE_RAW_IP=false

# Application Port (optional)
PORT=3000

# Local testing switches
# LOG_TO_FILE: Enable file logging instead of MongoDB (for local testing)
LOG_TO_FILE=false
# FILTER_PRIVATE_IPS: Filter out private/internal IPs from X-Forwarded-For (set false to keep all IPs)
FILTER_PRIVATE_IPS=false